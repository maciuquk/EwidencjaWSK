@model EwidencjaWSK.Models.Record

@{
    ViewData["Title"] = "Dodawanie nowego kontraktu";
}

<h1>Dodawanie nowego kontraktu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <input asp-for="Currency" class="form-control" />
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KindOfTransaction" class="control-label"></label>
                <input asp-for="KindOfTransaction" class="form-control" />
                <span asp-validation-for="KindOfTransaction" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCheckDenyList" /> @Html.DisplayNameFor(model => model.IsCheckDenyList)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCheckWarningSignalList" /> @Html.DisplayNameFor(model => model.IsCheckWarningSignalList)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsInPartsBase" /> @Html.DisplayNameFor(model => model.IsInPartsBase)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsNecessaryMinistryPermit" /> @Html.DisplayNameFor(model => model.IsNecessaryMinistryPermit)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SuplierId" class="control-label">Dostawca</label>
                <select asp-for="SuplierId" class ="form-control" asp-items="ViewBag.SuplierId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj kontrakt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do wszystkich kontraktów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
